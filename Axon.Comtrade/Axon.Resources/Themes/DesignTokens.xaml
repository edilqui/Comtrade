<!-- Axon.Resources/Themes/DesignTokens.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- =================================== -->
    <!-- BORDER RADIUS -->
    <!-- =================================== -->
    <CornerRadius x:Key="BorderRadiusNone">0</CornerRadius>
    <CornerRadius x:Key="BorderRadiusSmall">2</CornerRadius>
    <CornerRadius x:Key="BorderRadiusMedium">4</CornerRadius>
    <CornerRadius x:Key="BorderRadiusLarge">6</CornerRadius>
    <CornerRadius x:Key="BorderRadiusXLarge">8</CornerRadius>
    <CornerRadius x:Key="BorderRadiusCircular">10000</CornerRadius>

    <!-- =================================== -->
    <!-- FONT SIZES -->
    <!-- =================================== -->
    <sys:Double x:Key="FontSizeBase100">10</sys:Double>
    <sys:Double x:Key="FontSizeBase200">12</sys:Double>
    <sys:Double x:Key="FontSizeBase300">14</sys:Double>
    <sys:Double x:Key="FontSizeBase400">16</sys:Double>
    <sys:Double x:Key="FontSizeBase500">20</sys:Double>
    <sys:Double x:Key="FontSizeBase600">24</sys:Double>
    <sys:Double x:Key="FontSizeHero700">28</sys:Double>
    <sys:Double x:Key="FontSizeHero800">32</sys:Double>
    <sys:Double x:Key="FontSizeHero900">40</sys:Double>
    <sys:Double x:Key="FontSizeHero1000">68</sys:Double>

    <!-- =================================== -->
    <!-- FONT FAMILIES -->
    <!-- =================================== -->
    <FontFamily x:Key="FontFamilyBase">Segoe UI, Segoe UI Web (West European), -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, sans-serif</FontFamily>
    <FontFamily x:Key="FontFamilyMonospace">Consolas, Courier New, Courier, monospace</FontFamily>
    <FontFamily x:Key="FontFamilyNumeric">Bahnschrift, Segoe UI, Segoe UI Web (West European), -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, sans-serif</FontFamily>

    <!-- =================================== -->
    <!-- FONT WEIGHTS -->
    <!-- =================================== -->
    <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemibold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <!-- =================================== -->
    <!-- STROKE WIDTHS -->
    <!-- =================================== -->
    <Thickness x:Key="StrokeWidthThin">1</Thickness>
    <Thickness x:Key="StrokeWidthThick">2</Thickness>
    <Thickness x:Key="StrokeWidthThicker">3</Thickness>
    <Thickness x:Key="StrokeWidthThickest">4</Thickness>

    <!-- =================================== -->
    <!-- SPACING HORIZONTAL -->
    <!-- =================================== -->
    <sys:Double x:Key="SpacingHorizontalNone">0</sys:Double>
    <sys:Double x:Key="SpacingHorizontalXXS">2</sys:Double>
    <sys:Double x:Key="SpacingHorizontalXS">4</sys:Double>
    <sys:Double x:Key="SpacingHorizontalSNudge">6</sys:Double>
    <sys:Double x:Key="SpacingHorizontalS">8</sys:Double>
    <sys:Double x:Key="SpacingHorizontalMNudge">10</sys:Double>
    <sys:Double x:Key="SpacingHorizontalM">12</sys:Double>
    <sys:Double x:Key="SpacingHorizontalL">16</sys:Double>
    <sys:Double x:Key="SpacingHorizontalXL">20</sys:Double>
    <sys:Double x:Key="SpacingHorizontalXXL">24</sys:Double>
    <sys:Double x:Key="SpacingHorizontalXXXL">32</sys:Double>

    <!-- =================================== -->
    <!-- SPACING VERTICAL -->
    <!-- =================================== -->
    <sys:Double x:Key="SpacingVerticalNone">0</sys:Double>
    <sys:Double x:Key="SpacingVerticalXXS">2</sys:Double>
    <sys:Double x:Key="SpacingVerticalXS">4</sys:Double>
    <sys:Double x:Key="SpacingVerticalSNudge">6</sys:Double>
    <sys:Double x:Key="SpacingVerticalS">8</sys:Double>
    <sys:Double x:Key="SpacingVerticalMNudge">10</sys:Double>
    <sys:Double x:Key="SpacingVerticalM">12</sys:Double>
    <sys:Double x:Key="SpacingVerticalL">16</sys:Double>
    <sys:Double x:Key="SpacingVerticalXL">20</sys:Double>
    <sys:Double x:Key="SpacingVerticalXXL">24</sys:Double>
    <sys:Double x:Key="SpacingVerticalXXXL">32</sys:Double>

    <!-- =================================== -->
    <!-- ANIMATION DURATIONS -->
    <!-- =================================== -->
    <Duration x:Key="DurationUltraFast">0:0:0.05</Duration>
    <Duration x:Key="DurationFaster">0:0:0.1</Duration>
    <Duration x:Key="DurationFast">0:0:0.15</Duration>
    <Duration x:Key="DurationNormal">0:0:0.2</Duration>
    <Duration x:Key="DurationGentle">0:0:0.25</Duration>
    <Duration x:Key="DurationSlow">0:0:0.3</Duration>
    <Duration x:Key="DurationSlower">0:0:0.4</Duration>
    <Duration x:Key="DurationUltraSlow">0:0:0.5</Duration>

    <!-- =================================== -->
    <!-- ANIMATION EASING -->
    <!-- =================================== -->
    <!-- Note: WPF uses different easing functions, these are approximate equivalents -->
    <QuadraticEase x:Key="CurveAccelerateMax" EasingMode="EaseIn"/>
    <QuadraticEase x:Key="CurveAccelerateMid" EasingMode="EaseIn"/>
    <QuadraticEase x:Key="CurveAccelerateMin" EasingMode="EaseIn"/>
    <QuadraticEase x:Key="CurveDecelerateMax" EasingMode="EaseOut"/>
    <QuadraticEase x:Key="CurveDecelerateMid" EasingMode="EaseOut"/>
    <QuadraticEase x:Key="CurveDecelerateMin" EasingMode="EaseOut"/>
    <QuadraticEase x:Key="CurveEasyEaseMax" EasingMode="EaseInOut"/>
    <QuadraticEase x:Key="CurveEasyEase" EasingMode="EaseInOut"/>

    <!-- =================================== -->
    <!-- COLORS - NEUTRAL FOREGROUND -->
    <!-- =================================== -->
    <Color x:Key="ColorNeutralForeground1">#FFFFFF</Color>
    <Color x:Key="ColorNeutralForeground1Hover">#FFFFFF</Color>
    <Color x:Key="ColorNeutralForeground1Pressed">#FFFFFF</Color>
    <Color x:Key="ColorNeutralForeground1Selected">#FFFFFF</Color>
    <Color x:Key="ColorNeutralForeground2">#D6D6D6</Color>
    <Color x:Key="ColorNeutralForeground2Hover">#FFFFFF</Color>
    <Color x:Key="ColorNeutralForeground2Pressed">#FFFFFF</Color>
    <Color x:Key="ColorNeutralForeground2Selected">#FFFFFF</Color>
    <Color x:Key="ColorNeutralForeground3">#ADADAD</Color>
    <Color x:Key="ColorNeutralForeground3Hover">#D6D6D6</Color>
    <Color x:Key="ColorNeutralForeground3Pressed">#D6D6D6</Color>
    <Color x:Key="ColorNeutralForeground3Selected">#D6D6D6</Color>
    <Color x:Key="ColorNeutralForeground4">#999999</Color>
    <Color x:Key="ColorNeutralForegroundDisabled">#5C5C5C</Color>

    <!-- =================================== -->
    <!-- COLORS - BRAND FOREGROUND -->
    <!-- =================================== -->
    <Color x:Key="ColorBrandForegroundLink">#9F64D3</Color>
    <Color x:Key="ColorBrandForegroundLinkHover">#AB76D9</Color>
    <Color x:Key="ColorBrandForegroundLinkPressed">#9352CD</Color>
    <Color x:Key="ColorBrandForegroundLinkSelected">#9F64D3</Color>
    <Color x:Key="ColorBrandForeground1">#AB76D9</Color>
    <Color x:Key="ColorBrandForeground2">#B787DE</Color>
    <Color x:Key="ColorBrandForeground2Hover">#C399E3</Color>
    <Color x:Key="ColorBrandForeground2Pressed">#E4CFF3</Color>

    <!-- =================================== -->
    <!-- COLORS - NEUTRAL BACKGROUND -->
    <!-- =================================== -->
    <Color x:Key="ColorNeutralBackground1">#292929</Color>
    <Color x:Key="ColorNeutralBackground1Hover">#3D3D3D</Color>
    <Color x:Key="ColorNeutralBackground1Pressed">#1F1F1F</Color>
    <Color x:Key="ColorNeutralBackground1Selected">#383838</Color>
    <Color x:Key="ColorNeutralBackground2">#1F1F1F</Color>
    <Color x:Key="ColorNeutralBackground2Hover">#333333</Color>
    <Color x:Key="ColorNeutralBackground2Pressed">#141414</Color>
    <Color x:Key="ColorNeutralBackground2Selected">#2E2E2E</Color>
    <Color x:Key="ColorNeutralBackground3">#141414</Color>
    <Color x:Key="ColorNeutralBackground3Hover">#292929</Color>
    <Color x:Key="ColorNeutralBackground3Pressed">#0A0A0A</Color>
    <Color x:Key="ColorNeutralBackground3Selected">#242424</Color>
    <Color x:Key="ColorNeutralBackground4">#0A0A0A</Color>
    <Color x:Key="ColorNeutralBackground4Hover">#1F1F1F</Color>
    <Color x:Key="ColorNeutralBackground4Pressed">#000000</Color>
    <Color x:Key="ColorNeutralBackground4Selected">#1A1A1A</Color>
    <Color x:Key="ColorNeutralBackground5">#000000</Color>
    <Color x:Key="ColorNeutralBackground5Hover">#141414</Color>
    <Color x:Key="ColorNeutralBackground5Pressed">#050505</Color>
    <Color x:Key="ColorNeutralBackground5Selected">#0F0F0F</Color>
    <Color x:Key="ColorNeutralBackground6">#333333</Color>

    <!-- =================================== -->
    <!-- COLORS - BRAND BACKGROUND -->
    <!-- =================================== -->
    <Color x:Key="ColorBrandBackground">#782BC2</Color>
    <Color x:Key="ColorBrandBackgroundHover">#863FC8</Color>
    <Color x:Key="ColorBrandBackgroundPressed">#461278</Color>
    <Color x:Key="ColorBrandBackgroundSelected">#6A0FBC</Color>
    <Color x:Key="ColorBrandBackground2">#200F2F</Color>
    <Color x:Key="ColorBrandBackground2Hover">#461278</Color>
    <Color x:Key="ColorBrandBackground2Pressed">#050107</Color>

    <!-- =================================== -->
    <!-- COLORS - SUBTLE BACKGROUND -->
    <!-- =================================== -->
    <Color x:Key="ColorSubtleBackground">Transparent</Color>
    <Color x:Key="ColorSubtleBackgroundHover">#383838</Color>
    <Color x:Key="ColorSubtleBackgroundPressed">#2E2E2E</Color>
    <Color x:Key="ColorSubtleBackgroundSelected">#333333</Color>

    <!-- =================================== -->
    <!-- COLORS - NEUTRAL STROKE -->
    <!-- =================================== -->
    <Color x:Key="ColorNeutralStrokeAccessible">#ADADAD</Color>
    <Color x:Key="ColorNeutralStrokeAccessibleHover">#BDBDBD</Color>
    <Color x:Key="ColorNeutralStrokeAccessiblePressed">#B3B3B3</Color>
    <Color x:Key="ColorNeutralStrokeAccessibleSelected">#9F64D3</Color>
    <Color x:Key="ColorNeutralStroke1">#666666</Color>
    <Color x:Key="ColorNeutralStroke1Hover">#757575</Color>
    <Color x:Key="ColorNeutralStroke1Pressed">#6B6B6B</Color>
    <Color x:Key="ColorNeutralStroke1Selected">#707070</Color>
    <Color x:Key="ColorNeutralStroke2">#525252</Color>
    <Color x:Key="ColorNeutralStroke3">#3D3D3D</Color>
    <Color x:Key="ColorNeutralStrokeSubtle">#0A0A0A</Color>

    <!-- =================================== -->
    <!-- COLORS - BRAND STROKE -->
    <!-- =================================== -->
    <Color x:Key="ColorBrandStroke1">#9F64D3</Color>
    <Color x:Key="ColorBrandStroke2">#580F9B</Color>
    <Color x:Key="ColorBrandStroke2Hover">#580F9B</Color>
    <Color x:Key="ColorBrandStroke2Pressed">#351256</Color>

    <!-- =================================== -->
    <!-- COLORS - STATUS SUCCESS -->
    <!-- =================================== -->
    <Color x:Key="ColorStatusSuccessBackground1">#052505</Color>
    <Color x:Key="ColorStatusSuccessBackground2">#094509</Color>
    <Color x:Key="ColorStatusSuccessBackground3">#107C10</Color>
    <Color x:Key="ColorStatusSuccessForeground1">#54B054</Color>
    <Color x:Key="ColorStatusSuccessForeground2">#9FD89F</Color>
    <Color x:Key="ColorStatusSuccessBorder1">#107C10</Color>
    <Color x:Key="ColorStatusSuccessBorder2">#9FD89F</Color>

    <!-- =================================== -->
    <!-- COLORS - STATUS WARNING -->
    <!-- =================================== -->
    <Color x:Key="ColorStatusWarningBackground1">#4A1E04</Color>
    <Color x:Key="ColorStatusWarningBackground2">#8A3707</Color>
    <Color x:Key="ColorStatusWarningBackground3">#F7630C</Color>
    <Color x:Key="ColorStatusWarningForeground1">#FAA06B</Color>
    <Color x:Key="ColorStatusWarningForeground2">#FDCFB4</Color>
    <Color x:Key="ColorStatusWarningBorder1">#F7630C</Color>
    <Color x:Key="ColorStatusWarningBorder2">#F98845</Color>

    <!-- =================================== -->
    <!-- COLORS - STATUS DANGER -->
    <!-- =================================== -->
    <Color x:Key="ColorStatusDangerBackground1">#3B0509</Color>
    <Color x:Key="ColorStatusDangerBackground2">#6E0811</Color>
    <Color x:Key="ColorStatusDangerBackground3">#C50F1F</Color>
    <Color x:Key="ColorStatusDangerForeground1">#DC626D</Color>
    <Color x:Key="ColorStatusDangerForeground2">#EEACB2</Color>
    <Color x:Key="ColorStatusDangerBorder1">#C50F1F</Color>
    <Color x:Key="ColorStatusDangerBorder2">#DC626D</Color>

    <!-- =================================== -->
    <!-- BRUSHES - NEUTRAL FOREGROUND -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="NeutralForeground1Brush" Color="{StaticResource ColorNeutralForeground1}"/>
    <SolidColorBrush x:Key="NeutralForeground2Brush" Color="{StaticResource ColorNeutralForeground2}"/>
    <SolidColorBrush x:Key="NeutralForeground3Brush" Color="{StaticResource ColorNeutralForeground3}"/>
    <SolidColorBrush x:Key="NeutralForeground4Brush" Color="{StaticResource ColorNeutralForeground4}"/>
    <SolidColorBrush x:Key="NeutralForegroundDisabledBrush" Color="{StaticResource ColorNeutralForegroundDisabled}"/>

    <!-- =================================== -->
    <!-- BRUSHES - BRAND FOREGROUND -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="BrandForegroundLinkBrush" Color="{StaticResource ColorBrandForegroundLink}"/>
    <SolidColorBrush x:Key="BrandForeground1Brush" Color="{StaticResource ColorBrandForeground1}"/>
    <SolidColorBrush x:Key="BrandForeground2Brush" Color="{StaticResource ColorBrandForeground2}"/>

    <!-- =================================== -->
    <!-- BRUSHES - NEUTRAL BACKGROUND -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="NeutralBackground1Brush" Color="{StaticResource ColorNeutralBackground1}"/>
    <SolidColorBrush x:Key="NeutralBackground2Brush" Color="{StaticResource ColorNeutralBackground2}"/>
    <SolidColorBrush x:Key="NeutralBackground3Brush" Color="{StaticResource ColorNeutralBackground3}"/>
    <SolidColorBrush x:Key="NeutralBackground4Brush" Color="{StaticResource ColorNeutralBackground4}"/>
    <SolidColorBrush x:Key="NeutralBackground5Brush" Color="{StaticResource ColorNeutralBackground5}"/>
    <SolidColorBrush x:Key="NeutralBackground6Brush" Color="{StaticResource ColorNeutralBackground6}"/>

    <!-- =================================== -->
    <!-- BRUSHES - BRAND BACKGROUND -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="BrandBackgroundBrush" Color="{StaticResource ColorBrandBackground}"/>
    <SolidColorBrush x:Key="BrandBackground2Brush" Color="{StaticResource ColorBrandBackground2}"/>

    <!-- =================================== -->
    <!-- BRUSHES - SUBTLE BACKGROUND -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="{StaticResource ColorSubtleBackground}"/>

    <!-- =================================== -->
    <!-- BRUSHES - NEUTRAL STROKE -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="NeutralStrokeAccessibleBrush" Color="{StaticResource ColorNeutralStrokeAccessible}"/>
    <SolidColorBrush x:Key="NeutralStroke1Brush" Color="{StaticResource ColorNeutralStroke1}"/>
    <SolidColorBrush x:Key="NeutralStroke2Brush" Color="{StaticResource ColorNeutralStroke2}"/>
    <SolidColorBrush x:Key="NeutralStroke3Brush" Color="{StaticResource ColorNeutralStroke3}"/>
    <SolidColorBrush x:Key="NeutralStrokeSubtleBrush" Color="{StaticResource ColorNeutralStrokeSubtle}"/>

    <!-- =================================== -->
    <!-- BRUSHES - BRAND STROKE -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="BrandStroke1Brush" Color="{StaticResource ColorBrandStroke1}"/>
    <SolidColorBrush x:Key="BrandStroke2Brush" Color="{StaticResource ColorBrandStroke2}"/>

    <!-- =================================== -->
    <!-- BRUSHES - STATUS -->
    <!-- =================================== -->
    <SolidColorBrush x:Key="StatusSuccessBackground1Brush" Color="{StaticResource ColorStatusSuccessBackground1}"/>
    <SolidColorBrush x:Key="StatusSuccessBackground2Brush" Color="{StaticResource ColorStatusSuccessBackground2}"/>
    <SolidColorBrush x:Key="StatusSuccessBackground3Brush" Color="{StaticResource ColorStatusSuccessBackground3}"/>
    <SolidColorBrush x:Key="StatusSuccessForeground1Brush" Color="{StaticResource ColorStatusSuccessForeground1}"/>
    <SolidColorBrush x:Key="StatusSuccessForeground2Brush" Color="{StaticResource ColorStatusSuccessForeground2}"/>

    <SolidColorBrush x:Key="StatusWarningBackground1Brush" Color="{StaticResource ColorStatusWarningBackground1}"/>
    <SolidColorBrush x:Key="StatusWarningBackground2Brush" Color="{StaticResource ColorStatusWarningBackground2}"/>
    <SolidColorBrush x:Key="StatusWarningBackground3Brush" Color="{StaticResource ColorStatusWarningBackground3}"/>
    <SolidColorBrush x:Key="StatusWarningForeground1Brush" Color="{StaticResource ColorStatusWarningForeground1}"/>
    <SolidColorBrush x:Key="StatusWarningForeground2Brush" Color="{StaticResource ColorStatusWarningForeground2}"/>

    <SolidColorBrush x:Key="StatusDangerBackground1Brush" Color="{StaticResource ColorStatusDangerBackground1}"/>
    <SolidColorBrush x:Key="StatusDangerBackground2Brush" Color="{StaticResource ColorStatusDangerBackground2}"/>
    <SolidColorBrush x:Key="StatusDangerBackground3Brush" Color="{StaticResource ColorStatusDangerBackground3}"/>
    <SolidColorBrush x:Key="StatusDangerForeground1Brush" Color="{StaticResource ColorStatusDangerForeground1}"/>
    <SolidColorBrush x:Key="StatusDangerForeground2Brush" Color="{StaticResource ColorStatusDangerForeground2}"/>

    <!-- =================================== -->
    <!-- SHADOWS -->
    <!-- =================================== -->
    <DropShadowEffect x:Key="Shadow2" 
                      Color="Black" 
                      Opacity="0.24" 
                      BlurRadius="2" 
                      ShadowDepth="1" 
                      Direction="270"/>

    <DropShadowEffect x:Key="Shadow4" 
                      Color="Black" 
                      Opacity="0.24" 
                      BlurRadius="4" 
                      ShadowDepth="2" 
                      Direction="270"/>

    <DropShadowEffect x:Key="Shadow8" 
                      Color="Black" 
                      Opacity="0.24" 
                      BlurRadius="8" 
                      ShadowDepth="4" 
                      Direction="270"/>

    <DropShadowEffect x:Key="Shadow16" 
                      Color="Black" 
                      Opacity="0.24" 
                      BlurRadius="16" 
                      ShadowDepth="8" 
                      Direction="270"/>

    <DropShadowEffect x:Key="Shadow28" 
                      Color="Black" 
                      Opacity="0.24" 
                      BlurRadius="28" 
                      ShadowDepth="14" 
                      Direction="270"/>

    <!-- =================================== -->
    <!-- MARGINS & PADDINGS (usando spacing) -->
    <!-- =================================== -->
    <Thickness x:Key="PaddingXXS">2</Thickness>
    <Thickness x:Key="PaddingXS">4</Thickness>
    <Thickness x:Key="PaddingSNudge">6</Thickness>
    <Thickness x:Key="PaddingS">8</Thickness>
    <Thickness x:Key="PaddingMNudge">10</Thickness>
    <Thickness x:Key="PaddingM">12</Thickness>
    <Thickness x:Key="PaddingL">16</Thickness>
    <Thickness x:Key="PaddingXL">20</Thickness>
    <Thickness x:Key="PaddingXXL">24</Thickness>
    <Thickness x:Key="PaddingXXXL">32</Thickness>

    <Thickness x:Key="MarginXXS">2</Thickness>
    <Thickness x:Key="MarginXS">4</Thickness>
    <Thickness x:Key="MarginSNudge">6</Thickness>
    <Thickness x:Key="MarginS">8</Thickness>
    <Thickness x:Key="MarginMNudge">10</Thickness>
    <Thickness x:Key="MarginM">12</Thickness>
    <Thickness x:Key="MarginL">16</Thickness>
    <Thickness x:Key="MarginXL">20</Thickness>
    <Thickness x:Key="MarginXXL">24</Thickness>
    <Thickness x:Key="MarginXXXL">32</Thickness>

</ResourceDictionary>
