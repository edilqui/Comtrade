<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#6366F1</Color>
    <Color x:Key="PrimaryHoverColor">#4F46E5</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#1F1F23</Color>
    <Color x:Key="SurfaceColor">#2A2A2F</Color>
    <Color x:Key="CardColor">#35353A</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#A1A1AA</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#3F3F46</Color>

</ResourceDictionary>
