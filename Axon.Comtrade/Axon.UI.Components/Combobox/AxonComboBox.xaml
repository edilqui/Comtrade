<UserControl x:Class="Axon.UI.Components.AxonComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Name="ComboBoxRoot">

    <UserControl.Resources>

        <!-- Plantilla para items sin agrupar -->
        <DataTemplate x:Key="ItemTemplate">
            <Border Background="Transparent" x:Name="borderTemplate"
                Padding="8,8"
                    Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                Command="{Binding SelectCommand}" 
                                CommandParameter="{Binding}"/>
                </Border.InputBindings>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Check mark -->
                    <Viewbox Grid.Column="0" Height="16" Width="16">
                        <Path 
                          Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                          Stroke="{DynamicResource PrimaryBrush}"
                          StrokeThickness="2"
                          Width="24"
                          Height="24"
                          Margin="0,0,16,0"
                          VerticalAlignment="Stretch">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Viewbox>

                    <!-- Texto del item -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding Text}"
                              FontSize="14"
                              Foreground="#333333"
                              VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                        <Setter Property="Foreground" Value="#A0A0A0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="#6B46C1"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="borderTemplate" Property="Background" Value="{DynamicResource OverlayBrush}"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Plantilla para grupos -->
        <DataTemplate x:Key="GroupTemplate">
            <StackPanel>
                <!-- Header del grupo -->
                <Border Background="#F8F9FA" 
                        BorderBrush="#E1E5E9" 
                        BorderThickness="0,0,0,1"
                        Padding="12,6">
                    <TextBlock Text="{Binding Header}"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="#6C757D"/>
                </Border>

                <!-- Items del grupo -->
                <ItemsControl ItemsSource="{Binding Items}"
                            ItemTemplate="{StaticResource ItemTemplate}"/>
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label opcional -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Label, ElementName=ComboBoxRoot}"
                   FontSize="{StaticResource FontSizeBase300}"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,6">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Label, ElementName=ComboBoxRoot}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Label, ElementName=ComboBoxRoot}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!-- ComboBox principal -->
        <Grid Grid.Row="1">
            <!-- Botón principal del ComboBox -->
            <Button Background="White"
                    BorderBrush="#E1E5E9"
                    BorderThickness="1"
                    Padding="12,0"
                    MinHeight="32"
                    FontWeight="{StaticResource FontWeightSemibold}"
                    HorizontalContentAlignment="Stretch"
                    Click="ToggleDropDownCommand_Click"
                    Cursor="Hand">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#6B46C1"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsDropDownOpen, ElementName=ComboBoxRoot}" Value="True">
                                <Setter Property="BorderBrush" Value="#6B46C1"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Texto seleccionado -->
                    <TextBlock Grid.Column="0"
                              Text="{Binding DisplayText, ElementName=ComboBoxRoot}"
                              FontSize="14"
                              VerticalAlignment="Center"
                              TextTrimming="CharacterEllipsis">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedItem, ElementName=ComboBoxRoot}" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="#999999"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Flecha dropdown -->
                    <Path Grid.Column="1"
                          Data="M 0 0 L 4 4 L 8 0 Z"
                          Fill="#666666"
                          VerticalAlignment="Center"
                          Margin="8,0,0,0">
                        <Path.RenderTransform>
                            <RotateTransform Angle="0" CenterX="4" CenterY="2"/>
                        </Path.RenderTransform>
                        <Path.Style>
                            <Style TargetType="Path">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDropDownOpen, ElementName=ComboBoxRoot}" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <RotateTransform Angle="180" CenterX="4" CenterY="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </Grid>
            </Button>

            <!-- Dropdown como Popup verdadero -->
            <Popup x:Name="DropDownPopup"
                   IsOpen="{Binding IsDropDownOpen, ElementName=ComboBoxRoot}"
                   PlacementTarget="{Binding ElementName=ComboBoxRoot}"
                   Placement="Bottom"
                   AllowsTransparency="True"
                   PopupAnimation="Slide"
                   StaysOpen="False">

                <Border Background="White"
                        BorderBrush="#E1E5E9"
                        BorderThickness="1"
                        CornerRadius="4"
                        MaxHeight="300"
                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}">

                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                                        Direction="270" 
                                        ShadowDepth="4" 
                                        Opacity="0.15" 
                                        BlurRadius="8"/>
                    </Border.Effect>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled">

                        <!-- Content switcher basado en ShowGroups -->
                        <ContentControl>
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <!-- Vista sin grupos -->
                                            <ItemsControl ItemsSource="{Binding Items, ElementName=ComboBoxRoot}"
                                                        ItemTemplate="{StaticResource ItemTemplate}"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowGroups, ElementName=ComboBoxRoot}" Value="True">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <!-- Vista con grupos -->
                                                    <ItemsControl ItemsSource="{Binding Groups, ElementName=ComboBoxRoot}"
                                                                ItemTemplate="{StaticResource GroupTemplate}"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>

                    </ScrollViewer>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</UserControl>