<UserControl x:Class="Axon.UI.Components.AxonTextBlockButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Name="TextBlockButtonRoot">

    <UserControl.Resources>

        <!-- Estilo para el botón -->
        <Style x:Key="AxonIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Path Data="{Binding EffectiveButtonIcon, ElementName=TextBlockButtonRoot}"
                                  Fill="#666666"
                                  Width="16"
                                  Height="16"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E9E9E9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <StackPanel Orientation="Vertical">

        <!-- Label superior opcional -->
        <TextBlock Text="{Binding Label, ElementName=TextBlockButtonRoot}"
                   FontSize="14"
                   FontWeight="Medium"
                   Foreground="#333333"
                   Margin="0,0,0,6">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Label, ElementName=TextBlockButtonRoot}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Label, ElementName=TextBlockButtonRoot}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!-- Contenedor principal: TextBlock + Button -->
        <Border Background="White"
                BorderBrush="#E1E5E9"
                BorderThickness="1"
                CornerRadius="4"
                MinHeight="36">

            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsReadOnly, ElementName=TextBlockButtonRoot}" Value="True">
                            <Setter Property="Background" Value="#F8F9FA"/>
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#6B46C1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TextBlock principal -->
                <TextBlock Grid.Column="0"
                          Text="{Binding Text, ElementName=TextBlockButtonRoot}"
                          Foreground="{Binding DisplayTextBrush, ElementName=TextBlockButtonRoot}"
                          FontSize="14"
                          VerticalAlignment="Center"
                          Margin="12,0"
                          TextTrimming="CharacterEllipsis">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsReadOnly, ElementName=TextBlockButtonRoot}" Value="True">
                                    <Setter Property="FontStyle" Value="Italic"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Separador vertical -->
                <!--<Rectangle Grid.Column="1"
                          Width="1"
                          Fill="#E1E5E9"
                          Margin="0,8"
                          Visibility="{Binding EffectiveButtonVisibility, ElementName=TextBlockButtonRoot}"/>-->

                <!-- Botón con icono -->
                <Button Grid.Column="1"
                       Style="{StaticResource AxonIconButtonStyle}"
                       Command="{Binding EffectiveButtonCommand, ElementName=TextBlockButtonRoot}"
                       CommandParameter="{Binding EffectiveButtonCommandParameter, ElementName=TextBlockButtonRoot}"
                       ToolTip="{Binding EffectiveButtonTooltip, ElementName=TextBlockButtonRoot}"
                       Visibility="{Binding EffectiveButtonVisibility, ElementName=TextBlockButtonRoot}"
                       IsEnabled="{Binding EffectiveButtonIsEnabled, ElementName=TextBlockButtonRoot}"
                       Click="OnButtonClick"
                       Margin="4"/>

            </Grid>
        </Border>

    </StackPanel>
</UserControl>