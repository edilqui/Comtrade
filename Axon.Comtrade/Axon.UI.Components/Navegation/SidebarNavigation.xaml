<UserControl x:Class="Axon.UI.Components.Navigation.SidebarNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.UI.Components.Navigation"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- AGREGAR ESTAS REFERENCIAS -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Axon.Resources;component/Themes/DesignTokens.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Axon.Resources;component/Themes/Dark/Theme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Axon.Resources;component/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Estilo para el Tooltip -->
            <Style x:Key="NavigationTooltipStyle" TargetType="ToolTip">
                <Setter Property="Background" Value="{StaticResource NeutralBackground1Brush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource NeutralBackground1Brush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="MaxWidth" Value="200"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToolTip">
                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Estilo para los botones del menú -->
            <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="2,3"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="Height" Value="64"/>
                <Setter Property="Width" Value="76"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
                <Setter Property="FontSize" Value="{StaticResource FontSizeBase100}"/>
                <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}"/>
                <Setter Property="Foreground" Value="{StaticResource NavigationItemForeground}"/>                
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{StaticResource BorderRadiusSmall}"
                    Padding="{TemplateBinding Padding}">
                                <Border Padding="0,6"
                            BorderThickness="4,0,0,0"
                            x:Name="SelectionIndicator"
                            BorderBrush="Transparent">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="32"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Icono normal (outline) -->
                                        <ContentPresenter x:Name="IconPresenter"
                                    Grid.Row="0"
                                    Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,6"/>

                                        <!-- Icono seleccionado (filled) -->
                                        <ContentPresenter x:Name="SelectedIconPresenter"
                                    Visibility="Collapsed"
                                    Grid.Row="0"
                                    Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:ButtonExtensions.SelectedIcon)}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,6"/>

                                        <!-- Texto -->
                                        <ContentPresenter x:Name="ContentPresenter"
                                    Grid.Row="1"
                                    Margin="0,0,0,0"
                                    Content="{TemplateBinding Content}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    RecognizesAccessKey="True"/>
                                    </Grid>
                                </Border>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource HoverBrush}"/>
                                    <!--<Setter TargetName="SelectionIndicator" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>-->
                                    <Setter Property="Foreground" Value="{StaticResource BrandForeground1Brush}"/>
                                    <Setter TargetName="SelectedIconPresenter" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="IconPresenter" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource PressedBrush}"/>
                                </Trigger>
                                <!-- Trigger para item seleccionado -->
                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource NavigationItemBackgroundSelected}"/>
                                    <Setter Property="Foreground" Value="{StaticResource BrandForeground1Brush}"/>
                                    <Setter TargetName="SelectionIndicator" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter TargetName="SelectedIconPresenter" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="IconPresenter" Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Estilo para separador -->
            <Style x:Key="SeparatorStyle" TargetType="Border">
                <Setter Property="Height" Value="1"/>
                <Setter Property="Background" Value="{StaticResource BorderSubtleBrush}"/>
                <Setter Property="Margin" Value="12,8"/>
                <Setter Property="Opacity" Value="0.5"/>
            </Style>

            <!-- Estilo para títulos de sección -->
            <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
                <Setter Property="FontSize" Value="{StaticResource FontSizeBase100}"/>
                <Setter Property="FontWeight" Value="{StaticResource FontWeightSemibold}"/>
                <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
                <Setter Property="Margin" Value="16,12,16,4"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource NavigationBackground}"
            BorderBrush="{StaticResource BorderSubtleBrush}"
            BorderThickness="0,0,1,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Navigation Items -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SurfaceBrush}"
                    Padding="16,12"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo/Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ContentPresenter x:Name="LogoPresenter"
                                        Content="{Binding Logo, RelativeSource={RelativeSource AncestorType=local:SidebarNavigation}}"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:SidebarNavigation}}"
                                 FontFamily="{StaticResource FontFamilyBase}"
                                 FontSize="{StaticResource FontSizeBase400}"
                                 FontWeight="{StaticResource FontWeightSemibold}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Actions (opcional) -->
                    <ContentPresenter Grid.Column="1"
                                    Content="{Binding HeaderActions, RelativeSource={RelativeSource AncestorType=local:SidebarNavigation}}"
                                    VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- NAVIGATION ITEMS -->
            <ScrollViewer Grid.Row="1" 
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        Padding="8">
                <ItemsControl x:Name="NavigationItemsControl"
                            ItemsSource="{Binding NavigationItems, RelativeSource={RelativeSource AncestorType=local:SidebarNavigation}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Selector de template basado en tipo -->
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <!-- Template para NavigationItem -->
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <Button Content="{Binding Text}"
                                                          Tag="{Binding Icon}"
                                                          local:ButtonExtensions.SelectedIcon="{Binding HomeFilledIcon}"
                                                          Style="{StaticResource SidebarButtonStyle}"
                                                          Command="{Binding DataContext.ItemSelectedCommand, RelativeSource={RelativeSource AncestorType=local:SidebarNavigation}}"
                                                          CommandParameter="{Binding Id}"
                                                          ToolTip="{Binding Tooltip}"/>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <!-- Template para Separator -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Separator">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <Border Style="{StaticResource SeparatorStyle}"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <!-- Template para SectionTitle -->
                                            <DataTrigger Binding="{Binding Type}" Value="SectionTitle">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Text}"
                                                                     Style="{StaticResource SectionTitleStyle}"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="8">
                <ContentPresenter Content="{Binding Footer, RelativeSource={RelativeSource AncestorType=local:SidebarNavigation}}"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
