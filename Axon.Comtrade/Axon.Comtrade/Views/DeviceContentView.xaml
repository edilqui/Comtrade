<UserControl x:Class="Axon.Comtrade.Views.DeviceContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:tree="clr-namespace:Axon.UI.Components.TreeNode;assembly=Axon.UI.Components"  
             xmlns:views="clr-namespace:Axon.Comtrade.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             xmlns:buttons="clr-namespace:Axon.UI.Components.Buttons;assembly=Axon.UI.Components" 
             xmlns:axonUI="clr-namespace:Axon.UI.Components;assembly=Axon.UI.Components" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrush}"
                Height="{StaticResource SpacingVerticalXXXXXL}">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8" HorizontalAlignment="Left">                
                <Button Style="{StaticResource GhostButtonStyle}" Padding="4,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Height="24" Width="24" Margin="0,0,4,0">
                            <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" 
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Width="24" Height="24"/>
                        </Viewbox>
                        <TextBlock Grid.Column="1" Text="Dispositivos" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>
        <axonUI:AxonTabControl x:Name="MainTabControl" Grid.Row="1"
            SelectedIndex="1"
            SelectionChanged="OnTabChanged">
            <axonUI:AxonTabItem Header="Comunicación">
                <axonUI:AxonTabItem.Content>
                    <views:DeviceComunicationView />
                </axonUI:AxonTabItem.Content>
            </axonUI:AxonTabItem>

            <axonUI:AxonTabItem Header="Recolección">
                <axonUI:AxonTabItem.Content>
                    <TextBlock Text="Contenido de Recolección" />
                </axonUI:AxonTabItem.Content>
            </axonUI:AxonTabItem>

            <axonUI:AxonTabItem Header="Reglas">
                <axonUI:AxonTabItem.Content>
                    <TextBlock Text="Contenido de Reglas" />
                </axonUI:AxonTabItem.Content>
            </axonUI:AxonTabItem>

            <axonUI:AxonTabItem Header="Análisis">
                <axonUI:AxonTabItem.Content>
                    <TextBlock Text="Contenido de Análisis" />
                </axonUI:AxonTabItem.Content>
            </axonUI:AxonTabItem>

        </axonUI:AxonTabControl>        
    </Grid>
</UserControl>
