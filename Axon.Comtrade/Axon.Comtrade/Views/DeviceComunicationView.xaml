<UserControl x:Class="Axon.Comtrade.Views.DeviceComunicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:tree="clr-namespace:Axon.UI.Components.TreeNode;assembly=Axon.UI.Components"  
             xmlns:views="clr-namespace:Axon.Comtrade.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             xmlns:buttons="clr-namespace:Axon.UI.Components.Buttons;assembly=Axon.UI.Components" 
             xmlns:axonUI="clr-namespace:Axon.UI.Components;assembly=Axon.UI.Components" 
             xmlns:vm="clr-namespace:Axon.Comtrade.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <WrapPanel   >
                <StackPanel Grid.Row="1" Margin="{StaticResource MarginLHorizontal}" Width="300">

                    <!--seccion Directorio de salida-->
                    <TextBlock
                            Margin="0,16,0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Parámetros Generales"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />  

                    <axonUI:AxonTextBox Label="Nombre"
                          Text="{Binding Name}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="ID"
                          Text="{Binding IdDevice}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Timeout"
                          Text="{Binding Timeout}"
                          Units="seg"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Reintentos"
                          Text="{Binding Retry}"
                          Units="seg"
                          Margin="0,0,0,16"/>


                    <TextBlock
                            Margin="0,16,0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Timers"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />

                    <axonUI:AxonTextBox Label="Tiempo de Espera"
                          Text="{Binding Retry}"
                          Units="seg"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Tiempo Limite de Solicitud"
                          Text="{Binding Retry}"
                          Units="seg"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Tiempo de espera entre Solicitudes"
                          Text="{Binding Retry}"
                          Units="seg"
                          Margin="0,0,0,16"/>
                                  
                   

                </StackPanel>
                <StackPanel Grid.Row="1" Margin="32,0" Width="300">

                    <!--seccion Directorio de salida-->
                    <TextBlock
                            Margin="0,16,0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Parámetros de Protocolo"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />                   

                    <axonUI:AxonTextBox Label="Ip"
                          Text="127.0.0.1"
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Port"
                          Text="102"
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Server App Tittle"
                          Text="1000"
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Server AE Qualifier"
                          Text="3"
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Waiting Time After Int"
                          Text="100"
                          Units="seg"
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Request Timeout"
                          Text="120"
                          Units="seg"
                          Margin="0,0,0,16"/>

                </StackPanel>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
