<UserControl x:Class="Axon.Comtrade.Views.DeviceComunicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:tree="clr-namespace:Axon.UI.Components.TreeNode;assembly=Axon.UI.Components"  
             xmlns:views="clr-namespace:Axon.Comtrade.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             xmlns:buttons="clr-namespace:Axon.UI.Components.Buttons;assembly=Axon.UI.Components" 
             xmlns:axonUI="clr-namespace:Axon.UI.Components;assembly=Axon.UI.Components" 
             xmlns:vm="clr-namespace:Axon.Comtrade.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <WrapPanel   ItemWidth="420">
                <StackPanel Grid.Row="1" Margin="{StaticResource MarginL}">

                    <!--seccion Directorio de salida-->
                    <TextBlock
                Margin="0,16,0,16"
                FontSize="{StaticResource FontSizeBase400}"
                Foreground="{DynamicResource TextPrimaryBrush}"
                Text="Directorio de Salida"
                FontWeight="{DynamicResource FontWeightSemibold}"
                VerticalAlignment="Center"
                />

                    <axonUI:AxonTextBox Label="Directorio"
                          Text="Crear control para importar path"
                          Units="mseg"
                          Margin="0,0,0,16"/>

                    <!-- Radio Button para Estructura de Carpetas -->
                    <axonUI:AxonRadioButton 
                Label="Estructura de carpetas"
                SelectedValue="{Binding FolderStructure, Mode=TwoWay}"
                SelectionChanged="OnFolderStructureChanged"
                Margin="0,0,0,20">

                        <axonUI:AxonRadioItem Text="Arquitectura" Value="{x:Static vm:FolderStructure.ARCHITECTURE}"/>
                        <axonUI:AxonRadioItem Text="Fecha" Value="{x:Static vm:FolderStructure.DATE}"/>

                    </axonUI:AxonRadioButton>

                    <!--seccion Directorio de salida-->
                    <TextBlock
                Margin="0,16,0,16"
                FontSize="{StaticResource FontSizeBase300}"
                Foreground="{DynamicResource TextPrimaryBrush}"
                Text="Variables de Configuración"
                FontWeight="{DynamicResource FontWeightSemibold}"
                VerticalAlignment="Center"
                />

                    <!--descomprimir archivos-->
                    <axonUI:AxonToggleButton 
            Label="Descomprimir Archivos"
                IsChecked="{DynamicResource UnZipFile}"
            CheckedText="Habilitado"
            UncheckedText="Deshabilitado"
            Margin="0,0,0,16"/>

                    <!--Convertir CEV a Comtrade-->
                    <axonUI:AxonToggleButton 
            Label="Convertir CEV a Comtrade"
                IsChecked="{DynamicResource ConverterCEVtoComtrade}"
            CheckedText="Habilitado"
            UncheckedText="Deshabilitado"
            Margin="0,0,0,16"/>

                    <!--WebServer-->
                    <axonUI:AxonToggleButton 
            Label="Web Server"
                IsChecked="{DynamicResource WebServer}"
            CheckedText="Habilitado"
            UncheckedText="Deshabilitado"
            Margin="0,0,0,16"/>                   
                   

                </StackPanel>
                <StackPanel Grid.Row="1" Margin="{StaticResource MarginL}">

                    <!--seccion Directorio de salida-->
                    <TextBlock
                            Margin="0,16,0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Configuración de FTP Server"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />

                    <!--FTP Server-->
                    <axonUI:AxonToggleButton 
                            Label="FTP Server"
                                IsChecked="{DynamicResource UnZipFile}"
                            CheckedText="Habilitado"
                            UncheckedText="Deshabilitado"
                            Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Puerto de Salida FTP"
                          Text="21"
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Puerto Minimo"
                          Text="5000"
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Puerto Máximo"
                          Text="6000"
                          Units=""
                          Margin="0,0,0,16"/>

                    <axonUI:AxonToggleButton 
                            Label="TLS"
                                IsChecked="{DynamicResource UnZipFile}"
                            CheckedText="Habilitado"
                            UncheckedText="Deshabilitado"
                            Margin="0,0,0,16"/>

                    <TextBlock
                            Margin="0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Configuración SFTP Server"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />

                    <axonUI:AxonToggleButton 
                            Label="FTP Server"
                                IsChecked="{DynamicResource UnZipFile}"
                            CheckedText="Habilitado"
                            UncheckedText="Deshabilitado"
                            Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Puerto de Salida FTP"
                          Text="..."
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Certificado"
                          Text="5000"
                          Units=""
                          Margin="0,0,0,16"/>
                    <axonUI:AxonTextBox Label="Contraseña"
                          Text="***"
                          Units=""
                          Margin="0,0,0,16"/>

                </StackPanel>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
