<UserControl x:Class="Axon.Comtrade.Views.EmptyPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1E1E1E">

    <!-- Grid principal con fondo dark -->
    <Grid>
        <!-- Contenedor principal -->
        <Border Background="#2D2D2D"
                BorderBrush="#404040"
                BorderThickness="1"
                CornerRadius="8"
                Margin="32"
                Padding="48">

            <!-- Stack panel centrado -->
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">

                <!-- Icono -->
                <Viewbox Width="80" Height="80" Margin="0,0,0,24">
                    <Canvas Width="24" Height="24">
                        <Path Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,5V19H5V5H19M7.5,10A0.5,0.5 0 0,0 7,10.5V13.5A0.5,0.5 0 0,0 7.5,14H9.5A0.5,0.5 0 0,0 10,13.5V10.5A0.5,0.5 0 0,0 9.5,10H7.5M14.5,10A0.5,0.5 0 0,0 14,10.5V13.5A0.5,0.5 0 0,0 14.5,14H16.5A0.5,0.5 0 0,0 17,13.5V10.5A0.5,0.5 0 0,0 16.5,10H14.5M7.5,16A0.5,0.5 0 0,0 7,16.5V17.5A0.5,0.5 0 0,0 7.5,18H16.5A0.5,0.5 0 0,0 17,17.5V16.5A0.5,0.5 0 0,0 16.5,16H7.5Z"
                              Fill="#808080"
                              Stretch="Uniform"/>
                    </Canvas>
                </Viewbox>

                <!-- Título -->
                <TextBlock x:Name="TitleText"
                          Text="Página en construcción"
                          FontFamily="Segoe UI"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Margin="0,0,0,8"/>

                <!-- Subtítulo -->
                <TextBlock x:Name="SubtitleText"
                          Text="Esta vista aún no ha sido implementada. Estamos trabajando para tenerla lista pronto."
                          FontFamily="Segoe UI"
                          FontSize="14"
                          FontWeight="Normal"
                          Foreground="#B3B3B3"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          TextWrapping="Wrap"
                          MaxWidth="400"
                          LineHeight="20"
                          Margin="0,0,0,32"/>

                <!-- Botón de acción (opcional) -->
                <Button x:Name="ActionButton"
                       Content="Volver atrás"
                       Background="#0078D4"
                       Foreground="White"
                       BorderBrush="#0078D4"
                       BorderThickness="1"
                       Padding="24,12"
                       FontFamily="Segoe UI"
                       FontSize="14"
                       FontWeight="Medium"
                       Cursor="Hand"
                       HorizontalAlignment="Center"
                       MinWidth="120"
                       Visibility="Collapsed"
                       Click="ActionButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="ButtonBorder"
                                              Background="{TemplateBinding Background}"
                                              BorderBrush="{TemplateBinding BorderBrush}"
                                              BorderThickness="{TemplateBinding BorderThickness}"
                                              CornerRadius="6"
                                              Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Content="{TemplateBinding Content}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#106EBE"/>
                                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#106EBE"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#0C5A9E"/>
                                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#0C5A9E"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>