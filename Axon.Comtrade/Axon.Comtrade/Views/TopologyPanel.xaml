<UserControl x:Class="Axon.Comtrade.Views.TopologyPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Importar los estilos del TreeView -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Axon.UI.Components;component/TreeNode/TreeViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="0" Background="{DynamicResource ColorNeutralBackground2Brush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Height="48" >
            
        <TextBlock VerticalAlignment="Center"
                   Text="Dispositivos" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource ColorNeutralForeground1Brush}" 
                   Margin="8,0,0,0"/>
        </Border>

        <!-- Toolbar -->
        <!--<StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,15">

            <Button Content="Nueva Topología" 
                    Command="{Binding AddTopologyCommand}"
                    Margin="0,0,10,0"
                    Padding="12,6"/>

            <Button Content="Nuevo Protocolo" 
                    Command="{Binding AddProtocolCommand}"
                    Margin="0,0,10,0"
                    Padding="12,6"/>

            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" 
                       Margin="5,0"/>

            <Button Content="Expandir Todo" 
                    Command="{Binding ExpandAllCommand}"
                    Margin="10,0,10,0"
                    Padding="12,6"/>

            <Button Content="Colapsar Todo" 
                    Command="{Binding CollapseAllCommand}"
                    Margin="0,0,10,0"
                    Padding="12,6"/>
        </StackPanel>-->

        <!-- TreeView Principal -->
        <Border Grid.Row="1"
                Background="{StaticResource ColorNeutralBackground1Brush}"
                BorderBrush="{StaticResource ColorNeutralBackground1Brush}"
                BorderThickness="1"
                CornerRadius="{StaticResource BorderRadiusSmall}">

                <TreeView x:Name="TopologyTreeView"
                          Style="{StaticResource GenericTreeViewStyle}"
                          ItemsSource="{Binding TreeNodes}"
                          SelectedItemChanged="TopologyTreeView_SelectedItemChanged"
                          Margin="5"/>
        </Border>        
    </Grid>
</UserControl>
