<UserControl x:Class="Axon.Comtrade.Views.TopologyPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Importar los estilos del TreeView -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Axon.UI.Components;component/TreeNode/TreeViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Configuración de Topologías" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource NeutralForeground1Brush}" 
                   Margin="0,0,0,15"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,15">

            <Button Content="Nueva Topología" 
                    Command="{Binding AddTopologyCommand}"
                    Margin="0,0,10,0"
                    Padding="12,6"/>

            <Button Content="Nuevo Protocolo" 
                    Command="{Binding AddProtocolCommand}"
                    Margin="0,0,10,0"
                    Padding="12,6"/>

            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" 
                       Margin="5,0"/>

            <Button Content="Expandir Todo" 
                    Command="{Binding ExpandAllCommand}"
                    Margin="10,0,10,0"
                    Padding="12,6"/>

            <Button Content="Colapsar Todo" 
                    Command="{Binding CollapseAllCommand}"
                    Margin="0,0,10,0"
                    Padding="12,6"/>
        </StackPanel>

        <!-- TreeView Principal -->
        <Border Grid.Row="2"
                Background="{StaticResource NeutralBackground1Brush}"
                BorderBrush="{StaticResource NeutralBackground1Brush}"
                BorderThickness="1"
                CornerRadius="{StaticResource BorderRadiusSmall}">

            <ScrollViewer>
                <TreeView x:Name="TopologyTreeView"
                          Style="{StaticResource GenericTreeViewStyle}"
                          ItemsSource="{Binding TreeNodes}"
                          SelectedItemChanged="TopologyTreeView_SelectedItemChanged"
                          Margin="5"/>
            </ScrollViewer>
        </Border>

        <!-- Panel de información del elemento seleccionado -->
        <GroupBox Grid.Row="3" 
                  Foreground="{DynamicResource NeutralForeground1Brush}"
                  Header="Elemento Seleccionado"
                  Margin="0,15,0,0"
                  Padding="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Nombre:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" 
                         Text="{Binding SelectedNode.Title, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Margin="0,0,15,0"/>

                <Button Grid.Column="2"
                        Content="Guardar Cambios"
                        Command="{Binding SaveChangesCommand}"
                        Padding="15,8"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
