<UserControl x:Class="Axon.Comtrade.Views.DeviceCollectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:tree="clr-namespace:Axon.UI.Components.TreeNode;assembly=Axon.UI.Components"  
             xmlns:views="clr-namespace:Axon.Comtrade.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             xmlns:buttons="clr-namespace:Axon.UI.Components.Buttons;assembly=Axon.UI.Components" 
             xmlns:axonUI="clr-namespace:Axon.UI.Components;assembly=Axon.UI.Components" 
             xmlns:vm="clr-namespace:Axon.Comtrade.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <WrapPanel   >
                <StackPanel Grid.Row="1" Margin="{StaticResource MarginLHorizontal}" Width="300">

                    <!--seccion Directorio de salida-->
                    <TextBlock
                            Margin="0,16,0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Parámetros Generales"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />

                    <axonUI:AxonComboBox 
                        ShowGroups="False" 
                        Label="Modo Recolección" 
                        ItemsSource="{Binding DevicesExplorerVieModel.DeviceConfigSelected.CollectionMode}"
                        SelectedItem="{Binding DevicesExplorerVieModel.DeviceConfigSelected.CollectionModeSelected}"
                        DisplayMemberPath="Display"
                        Margin="0,0,0,16">
                    </axonUI:AxonComboBox>

                    <axonUI:AxonComboBox 
                        ShowGroups="False" 
                        Label="Filtro" 
                        ItemsSource="{Binding DevicesExplorerVieModel.DeviceConfigSelected.Filtro}"
                        SelectedItem="{Binding DevicesExplorerVieModel.DeviceConfigSelected.FiltroSelected}"
                        DisplayMemberPath="Display"
                        Margin="0,0,0,16">
                    </axonUI:AxonComboBox>




                </StackPanel>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
