<UserControl x:Class="Axon.Comtrade.Views.DeviceCollectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:tree="clr-namespace:Axon.UI.Components.TreeNode;assembly=Axon.UI.Components"  
             xmlns:views="clr-namespace:Axon.Comtrade.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             xmlns:buttons="clr-namespace:Axon.UI.Components.Buttons;assembly=Axon.UI.Components" 
             xmlns:axonUI="clr-namespace:Axon.UI.Components;assembly=Axon.UI.Components" 
             xmlns:vm="clr-namespace:Axon.Comtrade.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Geometry x:Key="SearchIcon">M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z</Geometry>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <WrapPanel   >
                <StackPanel Grid.Row="1" Margin="{StaticResource MarginLHorizontal}" Width="300">

                    <!--seccion Directorio de salida-->
                    <TextBlock
                            Margin="0,16,0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Parámetros Generales"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />

                    <axonUI:AxonComboBox 
                        ShowGroups="False" 
                        Label="Modo Recolección" 
                        ItemsSource="{Binding DevicesExplorerVieModel.DeviceConfigSelected.CollectionMode}"
                        SelectedItem="{Binding DevicesExplorerVieModel.DeviceConfigSelected.CollectionModeSelected}"
                        DisplayMemberPath="Display"
                        Margin="0,0,0,16">
                    </axonUI:AxonComboBox>

                    <axonUI:AxonTextBlockButton 
                        Label="Señal de Disparo"
                        Text="{Binding DevicesExplorerVieModel.DeviceConfigSelected.SelectedSignal, Mode=TwoWay}"
                        Placeholder="Seleccionar señal..."
                        ButtonIcon="{StaticResource SearchIcon}"
                        ButtonCommand="{Binding DevicesExplorerVieModel.DeviceConfigSelected.SearchSignalCommand}"
                        ButtonTooltip="Buscar señal"
                        Margin="0,0,0,16"/>

                    <axonUI:AxonComboBox 
                        ShowGroups="False" 
                        Label="Filtro" 
                        ItemsSource="{Binding DevicesExplorerVieModel.DeviceConfigSelected.Filtro}"
                        SelectedItem="{Binding DevicesExplorerVieModel.DeviceConfigSelected.FiltroSelected}"
                        DisplayMemberPath="Display"
                        Margin="0,0,0,16">
                    </axonUI:AxonComboBox>




                </StackPanel>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
