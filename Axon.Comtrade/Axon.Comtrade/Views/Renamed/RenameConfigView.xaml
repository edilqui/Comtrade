<UserControl x:Class="Axon.Comtrade.Views.RenameConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:tree="clr-namespace:Axon.UI.Components.TreeNode;assembly=Axon.UI.Components"  
             xmlns:views="clr-namespace:Axon.Comtrade.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axon.Comtrade.Views"
             xmlns:buttons="clr-namespace:Axon.UI.Components.Buttons;assembly=Axon.UI.Components" 
             xmlns:axonUI="clr-namespace:Axon.UI.Components;assembly=Axon.UI.Components" 
             xmlns:vm="clr-namespace:Axon.Comtrade.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrush}"
                Height="{StaticResource SpacingVerticalXXXXXL}">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8" HorizontalAlignment="Left">
                <Button Style="{StaticResource GhostButtonStyle}" Padding="4,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Height="24" Width="24" Margin="0,0,4,0">
                            <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" 
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Width="24" Height="24"/>
                        </Viewbox>
                        <TextBlock Grid.Column="1" Text="Renombrados" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <WrapPanel   >
                <StackPanel Grid.Row="1" Margin="{StaticResource MarginLHorizontal}" Width="300" DataContext="{Binding RenameItemSelected}">

                    <!--seccion Directorio de salida-->
                    <TextBlock
                            Margin="0,16,0,16"
                            FontSize="{StaticResource FontSizeBase400}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Parámetros Generales"
                            FontWeight="{DynamicResource FontWeightSemibold}"
                            VerticalAlignment="Center"
                            />  

                    <axonUI:AxonTextBox Label="Nombre"
                          Text="{Binding Name}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Comtrade Renombrado como"
                          Text="{Binding ComtradeRenameAs}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Formato de Fecha"
                          Text="{Binding DateFormat}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Código de barras mnemotécnico"
                          Text="{Binding BarCodeCodeNnemonics}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Protección mnemotécnica"
                          Text="{Binding ProtectionCodeNnemonics}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Subestación mnemotécnica"
                          Text="{Binding SubestationNnemonics}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Otros archivos"
                          Text="{Binding OtherFiles}"
                          Margin="0,0,0,16"/>

                    <axonUI:AxonTextBox Label="Formato de hora"
                          Text="{Binding HourFormat}"
                          Margin="0,0,0,16"/>

                </StackPanel>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
